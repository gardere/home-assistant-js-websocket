{
  "name": "home-assistant-js-websocket",
  "amdName": "HAWS",
  "sideEffects": false,
  "version": "3.1.3",
  "description": "Home Assistant websocket client",
  "source": "lib/index.ts",
  "types": "dist/index.d.ts",
  "main": "dist/haws.umd.js",
  "module": "dist/haws.es.js",
  "repository": {
    "url": "https://github.com/home-assistant/home-assistant-js-websocket.git",
    "type": "git"
  },
  "scripts": {
    "watch": "microbundle watch",
    "build": "microbundle --target browser",
    "test": "mocha",
    "prepublishOnly": "rm -rf dist && microbundle --target browser && mocha"
  },
  "author": "Paulus Schoutsen <paulus@paulusschoutsen.nl>",
  "license": "Apache-2.0",
  "devDependencies": {
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.2.0",
    "microbundle": "^0.6.0",
    "mocha": "^5.1.1",
    "prettier": "1.14.0",
    "reify": "^0.15.1",
    "ts-node": "^7.0.0"
  },
  "files": [
    "dist"
  ],
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
